[user]
    name = #NAME#
    email = #EMAIL#

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    up = "!gup() { git fetch $1 && git rebase -p $1 $2; }; gup"

[core]
    whitespace = trailing-space,space-before-tab,cr-at-eol
    excludesfile = #HOME#/.gitignore

[color]
    ui = true
    diff = true
